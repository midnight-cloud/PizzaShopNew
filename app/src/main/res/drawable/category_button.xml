<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid
                android:color="@color/category_button_pressed"/>
            <corners
                android:radius="6dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/category_button_text_pressed"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/white" />
            <corners
                android:radius="6dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/category_button_text_unpressed"/>
        </shape>
    </item>
</selector>